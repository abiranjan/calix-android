<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- App general theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--Splash Screen theme -->
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>

    </style>


    <!-- Layout style - (width and height both are match_parent) -->
    <style name="LayoutMatch" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Layout style - (width and height both are wrap_content) -->
    <style name="LayoutWrap" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height wrap_content) -->
    <style name="LayoutWidMatch_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height 0dip) -->
    <style name="LayoutWidMatch_HeiWei" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Layout style - (width 0dip and  height wrap_content) -->
    <style name="LayoutWidWei_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!--Text style OpenSans-SemiBold -->
    <style name="TextRobotoMedium" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Roboto-Medium.otf</item>
        <item name="android:gravity">center</item>
    </style>


    <!--Text style OpenSans-Regular -->
    <style name="TextRobotoRegular" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="fontPath">fonts/Roboto-Regular.otf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>


    <!--Edit text style OpenSans-Regular-->
    <style name="EditTextRobotoRegular" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size35</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/blue_border_bg</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:paddingStart">@dimen/size10</item>
        <item name="android:paddingEnd">0dip</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="fontPath">fonts/Roboto-Regular.otf</item>
    </style>



    <!--Button text style OpenSans-Bold-->
    <style name="ButtonRobotoMedium" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/blue_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Roboto-Medium.otf</item>
    </style>


    <!--Dialog box-->
    <style name="PopupBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_in_top</item>
    </style>


</resources>
