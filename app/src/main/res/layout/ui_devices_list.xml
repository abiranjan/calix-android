<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch"
    android:id="@+id/device_lay"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/devices_header_bg_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size45"
        android:background="@color/blue">

        <include layout="@layout/ui_general_header" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/device_spinner_lay"
        style="@style/LayoutMatch"
        android:visibility="gone"
        android:layout_height="@dimen/size30"
        android:layout_centerInParent="true"
        android:layout_below="@id/devices_header_bg_lay"
        android:background="@drawable/blue_border_bg"
        android:padding="@dimen/size1">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size10">

        <ImageView
            style="@style/LayoutWrap"
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_filter_devices"/>

        <TextView
            android:id="@+id/spinner_filter_name_txt"
            style="@style/TextRobotoRegular"
            android:layout_marginStart="@dimen/size10"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:text="@string/all"
            android:textColor="@color/black"
            android:textSize="@dimen/size13" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size1"
            android:layout_marginTop="@dimen/size1"
            android:layout_toStartOf="@+id/device_arrow_up_lay"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/device_arrow_up_lay"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/size10">

            <ImageView
                android:id="@+id/arrow_img"
                style="@style/LayoutMatch"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_down_arrow" />
        </RelativeLayout>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/devices_list_recycler_view"
        android:layout_below="@+id/device_spinner_lay"
        android:layout_above="@+id/general_footer_devices"
        android:focusableInTouchMode="true"
        android:focusable="true"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size3"
        android:layout_marginTop="@dimen/size3" />

    <ImageView
        android:id="@+id/transaprent_bg"
        android:visibility="gone"
        style="@style/LayoutMatch"
        android:layout_below="@+id/device_spinner_lay"
        android:layout_above="@+id/general_footer_devices"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/transparent_bg" />

    <android.support.v7.widget.CardView
        android:id="@+id/device_spinner_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size130"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size220"
        android:elevation="@dimen/size3"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/size3"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/device_spinner_recycler_view"
            style="@style/LayoutMatch"
            />
    </android.support.v7.widget.CardView>

    <include layout="@layout/ui_general_footer"
        android:id="@+id/general_footer_devices"/>

</RelativeLayout>


