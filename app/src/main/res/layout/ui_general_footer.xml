<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/bottom_bar_lay"
    style="@style/LayoutMatch"
    android:layout_height="@dimen/size45"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        style="@style/LayoutMatch"
        android:layout_weight="1"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/footer_left_btn"
            android:layout_height="@dimen/size40"
            android:layout_width="@dimen/size80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical"
            android:padding="@dimen/size5"
            >

            <ImageView
                android:id="@+id/footer_left_ic"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/footer_left_txt"
                style="@style/TextRobotoRegular"
                android:textColor="@color/white"
                android:textSize="@dimen/text10" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        style="@style/LayoutMatch"
        android:layout_weight="1"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/footer_center_btn"
            android:layout_height="@dimen/size45"
            android:layout_width="@dimen/size80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical"
            android:padding="@dimen/size5"
            >

            <ImageView
                android:id="@+id/footer_center_ic"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/footer_center_txt"
                style="@style/TextRobotoRegular"
                android:textColor="@color/white"
                android:textSize="@dimen/text10" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        style="@style/LayoutMatch"
        android:layout_weight="1"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/footer_right_btn"
            android:layout_height="@dimen/size40"
            android:layout_width="@dimen/size80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical"
            android:padding="@dimen/size5"
            >

            <ImageView
                android:id="@+id/footer_right_ic"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/footer_right_txt"
                style="@style/TextRobotoRegular"
                android:textColor="@color/white"
                android:textSize="@dimen/text10" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
