<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:orientation="vertical"
        android:padding="@dimen/size5">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                style="@style/LayoutWrap"
                android:layout_margin="@dimen/size6"
                android:orientation="vertical">

                <FrameLayout
                    style="@style/LayoutWrap"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        style="@style/LayoutWrap"
                        android:layout_height="@dimen/size70"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_dot_router" />

                    <ImageView
                        style="@style/LayoutWrap"
                        android:layout_height="@dimen/size15"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_router_arrow" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/device_img"
                    android:layout_width="@dimen/size80"
                    android:layout_height="@dimen/size80"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_router" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/internet_label_header"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size120"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/gray_border_btn"
                android:padding="@dimen/size10">

                <LinearLayout
                    style="@style/LayoutWrap"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/device_name_txt"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text12"
                        android:layout_marginStart="@dimen/size10"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="@string/internet_cap" />

                    <ImageView
                        android:id="@+id/edit_device_name"
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_marginStart="@dimen/size5"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_edit" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/router_download_lay"
                    style="@style/LayoutWrap"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/download_speed_txt"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/size3"
                        android:layout_marginTop="@dimen/size3"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size12" />

                    <TextView
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/size3"
                        android:layout_marginTop="@dimen/size3"
                        android:padding="@dimen/size5"
                        android:text="@string/speed_unit"
                        android:textSize="@dimen/size12" />

                    <ImageView
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_marginTop="@dimen/size6"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_download" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/router_upload_lay"
                    style="@style/LayoutWrap"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upload_speed_txt"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/size3"
                        android:layout_marginTop="@dimen/size3"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size12" />

                    <TextView
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/size3"
                        android:layout_marginTop="@dimen/size3"
                        android:padding="@dimen/size5"
                        android:text="@string/speed_unit"
                        android:textSize="@dimen/size12" />

                    <ImageView
                        android:layout_width="@dimen/size20"
                        android:layout_height="@dimen/size20"
                        android:layout_marginTop="@dimen/size6"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_upload" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/router_recycler_view"
            style="@style/LayoutWidMatch_HeiWrap" />


    </LinearLayout>

</RelativeLayout>


