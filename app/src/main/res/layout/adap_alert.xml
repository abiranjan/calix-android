<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size5"
    android:elevation="@dimen/size2"
    app:cardCornerRadius="@dimen/size3"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginTop="@dimen/size2"
        android:padding="@dimen/size10">

        <ImageView
            android:id="@+id/issue_status_img"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size3"
            android:src="@drawable/ic_notify_phone" />

        <TextView
            android:id="@+id/issue_txt"
            style="@style/TextRobotoRegular"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size10"
            android:layout_toEndOf="@+id/issue_status_img"
            android:layout_toStartOf="@+id/fix_it_done_btn"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="@dimen/text14" />

        <Button
            android:id="@+id/fix_it_done_btn"
            style="@style/ButtonRobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/red_border_btn"
            android:paddingBottom="@dimen/size4"
            android:paddingEnd="@dimen/size15"
            android:paddingStart="@dimen/size15"
            android:paddingTop="@dimen/size4"
            android:text="@string/fix_it"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
