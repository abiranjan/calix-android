<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap">

    <android.support.v7.widget.CardView
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size5"
        android:layout_marginTop="@dimen/size4"
        android:padding="@dimen/size5">

        <RelativeLayout style="@style/LayoutWrap">

            <RelativeLayout
                android:id="@+id/adapter_guest_network_edit_lay"
                style="@style/LayoutWidMatch_HeiWrap">

                <LinearLayout
                    style="@style/LayoutWrap"
                    android:orientation="horizontal"
                    android:padding="@dimen/size3">

                    <com.calix.calixgigaspireapp.utils.RoundedImageView
                        android:id="@+id/guest_user_img"
                        android:layout_width="@dimen/size40"
                        android:layout_height="@dimen/size40"
                        android:layout_margin="@dimen/size1"
                        android:background="@drawable/image_background_black"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/default_profile_black" />

                    <LinearLayout
                        style="@style/LayoutWrap"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/size10"
                        android:paddingEnd="0dp"
                        android:paddingStart="@dimen/size13"
                        android:paddingTop="@dimen/size10">

                        <LinearLayout
                            style="@style/LayoutWrap"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/event_name_txt"
                                style="@style/TextRobotoMedium"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:layout_marginTop="@dimen/size4"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size13" />

                            <ImageView
                                android:id="@+id/guest_edit_img"
                                android:layout_marginStart="@dimen/size10"
                                android:layout_width="@dimen/size20"
                                android:layout_height="@dimen/size20"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_edit" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/event_time_txt"
                            style="@style/TextRobotoRegular"
                            android:layout_width="wrap_content"
                            android:gravity="start"
                            android:paddingTop="@dimen/size2"
                            android:textColor="@color/green"
                            android:textSize="@dimen/size11" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/adapter_guest_network_arrow_right_img"
                    android:layout_width="@dimen/size27"
                    android:layout_height="@dimen/size27"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/size5"
                    android:src="@drawable/ic_guest_up_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/collapsedView"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_below="@id/adapter_guest_network_edit_lay"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/dateValuesLay"
                    style="@style/LayoutWidMatch_HeiWrap">

                    <ImageView
                        android:id="@+id/imageIcon"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="@dimen/size10"
                        android:paddingEnd="@dimen/size10"
                        android:paddingStart="0dp"
                        android:paddingTop="@dimen/size10"
                        android:src="@drawable/ic_calendar" />

                    <LinearLayout
                        style="@style/LayoutWrap"
                        android:layout_toEndOf="@+id/imageIcon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/start_date_txt"
                            style="@style/TextRobotoMedium"
                            android:layout_width="wrap_content"
                            android:paddingTop="@dimen/size10"
                            android:text="@string/start_date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size11" />

                        <TextView
                            android:id="@+id/date_format"
                            style="@style/TextRobotoMedium"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size2"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/size2"
                            android:text="@string/date_format"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/size11" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/LayoutWrap"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/end_date_txt"
                            style="@style/TextRobotoMedium"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="@dimen/size20"
                            android:gravity="start"
                            android:paddingTop="@dimen/size10"
                            android:text="@string/end_date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size11" />


                        <TextView
                            style="@style/TextRobotoMedium"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size2"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/size2"
                            android:text="@string/date_format"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/size11" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/labelValuesLay"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_below="@+id/dateValuesLay">

                    <ImageView
                        android:id="@+id/emptyImage"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size40"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="@dimen/size10"
                        android:paddingEnd="@dimen/size10"
                        android:paddingStart="0dp"
                        android:paddingTop="@dimen/size10"
                        android:src="@drawable/ic_calendar"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/emptyImage"
                        android:gravity="center"
                        android:minWidth="@dimen/size60"
                        android:paddingTop="@dimen/size15"
                        android:text="@string/start"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/size11" />

                    <TextView
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/size20"
                        android:gravity="center"
                        android:minWidth="@dimen/size60"
                        android:paddingTop="@dimen/size15"
                        android:text="@string/end"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/size11" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/timeValuesLay"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_below="@+id/labelValuesLay">

                    <ImageView
                        android:id="@+id/imageIconTime"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="@dimen/size10"
                        android:paddingEnd="@dimen/size10"
                        android:paddingStart="0dp"
                        android:paddingTop="@dimen/size10"
                        android:src="@drawable/ic_guest_time" />

                    <TextView
                        android:id="@+id/start_time_txt"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/imageIconTime"
                        android:gravity="center"
                        android:minWidth="@dimen/size60"
                        android:paddingTop="@dimen/size15"
                        android:text="@string/start_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size11" />

                    <TextView
                        android:id="@+id/end_time_txt"
                        style="@style/TextRobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/size20"
                        android:gravity="center"
                        android:minWidth="@dimen/size60"
                        android:paddingTop="@dimen/size15"
                        android:text="@string/end_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size11" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>