<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/devices_header_bg_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size45"
        android:background="@color/blue">

        <include layout="@layout/ui_general_header"
            />



    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/devices_recycler_view"
        android:layout_below="@id/devices_header_bg_lay"
        android:layout_above="@+id/general_footer_devices"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size3"
        android:layout_marginTop="@dimen/size3" />

    <include layout="@layout/ui_general_footer"
        android:id="@+id/general_footer_devices"/>

</RelativeLayout>


